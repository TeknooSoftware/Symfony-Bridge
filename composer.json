{
    "name": "teknoo/bridge-phpdi-symfony",
    "description": "Userfriendly integration of PHP-DI with Symfony, Fork from php-di/symfony-bridge",
    "license": "MIT",
    "type": "library",
    "keywords": ["symfony", "phpdi", "di", "bridge"],
    "homepage": "http://teknoo.software/bridge-phpdi-symfony",
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "richarddeloge@gmail.com",
            "role":"Software architect, Lead developer"
        },
        {
            "name": "Matthieu Napoli",
            "role":"Original author before fork"
        }
    ],
    "require": {
        "php": "~7.4||~8.0",
        "php-di/php-di": "~6.0",
        "symfony/dependency-injection": "~4.4||~5.1",
        "symfony/http-kernel": "~4.4||~5.1",
        "symfony/config": "~4.4||~5.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "~9.2",
        "squizlabs/php_codesniffer": "~3.5",
        "pdepend/pdepend": "~2.8",
        "sebastian/phpcpd": "~6.0",
        "phploc/phploc": "~7.0",
        "phpstan/phpstan": "^0.12.39",
        "symfony/filesystem": "~4.4||~5.1",
        "symfony/yaml": "~4.4||~5.1",
        "symfony/error-handler": "~4.4||~5.1"
    },
    "autoload": {
        "psr-4": {
            "Teknoo\\DI\\SymfonyBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teknoo\\Tests\\DI\\SymfonyBridge\\": "tests/"
        }
    },
    "archive": {
        "exclude": ["features", "tests", "vendor", ".idea"]
    },
    "extra": {
        "thanks": {
            "name": "php-di/php-di",
            "url": "https://github.com/PHP-DI/PHP-DI"
        }
    }
}
